{
    "name": "@elizaos/client-mattermost",
    "version": "0.1.0",
    "description": "Mattermost client plugin for Eliza framework",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "import": {
                "@elizaos/source": "./src/index.ts",
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format esm --dts",
        "clean": "rimraf dist",
        "dev": "tsup src/index.ts --watch",
        "buildclean": "pnpm clean && pnpm build",
        "verify": "pnpm buildclean && DEBUG=* pnpm -w start --characters=\"characters/hiro.character.json\""
    },
    "dependencies": {
        "@elizaos/core": "workspace:*",
        "@mattermost/client": "^7.10.0",
        "body-parser": "^1.20.2",
        "express": "^4.18.2",
        "node-fetch": "^2.6.9"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.11",
        "dotenv": "^16.4.7",
        "jest": "^29.5.0",
        "rimraf": "^5.0.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.2",
        "tsup": "^8.3.5",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=14.0.0"
    }
}
